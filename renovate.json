{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rebaseWhen": "conflicted",
  "rebaseLabel": "rebase",
  "packageRules": [
    {
      "groupName": "Kotlin and compiler plugins",
      "matchPackagePatterns": [
        "^org\\.jetbrains\\.kotlin:(?:[\\w-]+)$",
        "^com\\.google\\.devtools\\.ksp:(?:[\\w-]+)$",
        "^com\\.square\\.anvil:(?:[\\w-]+)$",
        "^dev\\.drewhamilton\\.poko:(?:[\\w-]+)$"
      ]
    },
    {
      "groupName": "KtLint libs",
      "matchPackagePatterns": [
        "^com\\.pinterest\\.ktlint:(?:[\\w-]+)$",
        "^com\\.rickbusarow\\.ktlint:(?:[\\w-]+)$",
        "^com\\.rickbusarow\\.ktrules:(?:[\\w-]+)$"
      ]
    },
    {
      "automergeStrategy": "rebase",
      "groupName": "Kase published version",
      "matchPackagePrefixes": ["com.rickbusarow.kase:"],
      "automerge": true,
      "automergeType": "pr",
      "autoApprove": true
    }
  ],
  "labels": [
    "dependencies",
    "automerge"
  ]
}
